{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copyDistToDocs",
            "type": "shell",
            "command": "cp -r dist/* docs/",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": ".*"
                    },
                    "endsPattern": {
                        "regexp": ".*"
                    }
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "watch": {
                "file": "dist/**/*"
            }
        }
    ]
}
